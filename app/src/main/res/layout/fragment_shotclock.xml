<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtResetShotlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2.5"
            android:background="@drawable/button_other"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:onClick="shotlock"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/text_resetShotlock"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtShotlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:background="@drawable/button_other"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:onClick="toggleChrono"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/text_shotlock"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>