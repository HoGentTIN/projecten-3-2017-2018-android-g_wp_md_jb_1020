<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnTimeOutHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="homeTimeout"
                android:text="@string/button_home" />

            <Button
                android:id="@+id/btnTimeOutAway"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="awayTimeout"
                android:text="@string/button_away" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llActionButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInjury"
                style="@style/actionbuttontext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_injury"
                android:text="@string/injury" />

            <Button
                android:id="@+id/btnNumberChange"
                style="@style/actionbuttontext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_change"
                android:onClick="changePlayers"
                android:text="@string/button_change" />

            <RelativeLayout
                android:id="@+id/btnGoal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_goal"
                android:clickable="true"
                android:onClick="goalMade">

                <TextView
                    android:id="@+id/iconGoal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"
                    android:text="@string/fa_icon_ball"
                    android:textAlignment="center"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/txtBtnGoal"
                    style="@style/actionbuttontext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/iconGoal"
                    android:layout_marginTop="4dp"
                    android:text="@string/button_goal"
                    android:textAlignment="center" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnU20"
                style="@style/actionbuttontext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_u20"
                android:onClick="faultU20"
                android:text="@string/t_button_U20" />

            <Button
                android:id="@+id/btnUMV"
                style="@style/actionbuttontext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_umv"
                android:onClick="faultUMV"
                android:text="@string/button_UMV" />

            <RelativeLayout
                android:id="@+id/btnUMV4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_umv4"
                android:clickable="true"
                android:onClick="faultUMV4">

                <TextView
                    android:id="@+id/iconUMV4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="16dp"
                    android:text="@string/fa_icon_exclamation"
                    android:textAlignment="center"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/txtBtnUMV4"
                    style="@style/actionbuttontext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/iconUMV4"
                    android:layout_marginTop="4dp"
                    android:text="@string/button_UMV4"
                    android:textAlignment="center" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtShotlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:clickable="true"
                android:onClick="stopShotlock"
                android:padding="4dp"
                android:text="@string/text_shotlock"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnShotlock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="shotlock"
                android:text="@string/button_shotclock" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
