<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:background="@color/colorGray">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp">

                <Button
                    android:id="@+id/btnTimeOutHome"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="homeTimeout"
                    android:text="@string/button_home" />

                <Button
                    android:id="@+id/btnTimeOutAway"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="awayTimeout"
                    android:text="@string/button_away" />
            </LinearLayout>

            <Button
                android:id="@+id/btnInjury"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="@string/injury"
                android:background="@drawable/button_injury"
                style="@style/actionbuttontext"/>

            <Button
                android:id="@+id/btnNumberChange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:onClick="changePlayers"
                android:text="@string/button_change"
                android:background="@drawable/button_change"
                style="@style/actionbuttontext"/>

            <Button
                android:id="@+id/btnGoal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_goal"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:contentDescription="@string/t_button_goal"
                android:onClick="goalMade"
                android:text="@string/button_goal"
                android:layout_margin="2dp"
                style="@style/actionbuttontext"
                />

            <Button
                android:id="@+id/btnU20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:onClick="faultU20"
                android:layout_margin="2dp"
                android:text="@string/t_button_U20"
                android:background="@drawable/button_u20"
                style="@style/actionbuttontext"/>

            <Button
                android:id="@+id/btnUMV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:onClick="faultUMV"
                android:layout_margin="2dp"
                android:text="@string/button_UMV"
                android:background="@drawable/button_umv"
                style="@style/actionbuttontext"/>

            <Button
                android:id="@+id/btnUMV4"
                android:background="@drawable/button_umv4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:onClick="faultUMV4"
                android:layout_margin="2dp"
                android:text="@string/button_UMV4"
                style="@style/actionbuttontext"/>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txtShotlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@color/colorWhite"
                    android:layout_gravity="center"
                    android:onClick="stopShotlock"
                    android:padding="4dp"
                    android:text="@string/text_shotlock"
                    android:textAlignment="center"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnShotlock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="shotlock"
                    android:text="@string/button_shotclock" />
            </LinearLayout>
        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
