<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g1020.waterpolo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="Application.ApplicationRuntime"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_waterpolo"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CompetitionSelection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdministrationSetup"
            android:parentActivityName=".CompetitionSelection" />
        <activity
            android:name=".MatchControl"
            android:parentActivityName=".AdministrationSetup" />
        <activity
            android:name=".PlayerControl"
            android:parentActivityName=".MatchControl" />
        <activity
            android:name=".AdministrationEnd"
            android:parentActivityName=".MatchControl" />
        <activity
            android:name=".roundSetup"
            android:parentActivityName=".MatchControl" />
        <activity
            android:name=".PlayersHomeFaultFragment"
            android:label="@string/title_activity_players_home_fault_fragment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>