<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g1020.waterpolo">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="application.ApplicationRuntime"
        android:allowBackup="true"
        android:icon="@drawable/logo_waterpolo_large"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_waterpolo_large"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".CompetitionSelection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MatchControl"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdministrationEnd"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
    </application>

</manifest>